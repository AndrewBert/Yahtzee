            app:layout_constraintTop_toTopOf="@+id/versusButton"
            app:layout_constraintBottom_toBottomOf="@+id/versusButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:background="@drawable/button_background_white" android:textColor="#FF8921"/>
