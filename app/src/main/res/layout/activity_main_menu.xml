<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenuActivity">

    <Button
            android:text="SOLO"
            android:layout_height="50dp"
            android:id="@+id/soloMenuButton" android:layout_width="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="250dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="VERSUS"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/vsMenuButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/soloMenuButton"/>
</android.support.constraint.ConstraintLayout>